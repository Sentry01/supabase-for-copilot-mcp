{
    "inputs": [
        {
            "description": "GitHub Personal Access Token",
            "type": "secret",
            "id": "GITHUB_PERSONAL_ACCESS_TOKEN",
            "password": true,
            "required": true
        }
      ],
    "servers": {
        "playwright": {
                "command": "npx",
                "args": [
                  "@playwright/mcp@latest",
                  "--headless"
                ]
            },
            "github": {
              "command": "npx",
              "args": [
                "-y",
                "@modelcontextprotocol/server-github"
              ],
              "env": {
                "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_PERSONAL_ACCESS_TOKEN}",
              }
            }
    }
}
